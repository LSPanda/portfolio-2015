// Social Network link on my portfolio
.social
    rem-fallback( margin-top, -3px )
    rem-fallback( margin-left, -8px )

.social__link
    display inline-block
    rem-fallback( width, 32px )
    rem-fallback( height, 32px )
    rem-fallback( text-indent, -9999px )
    rem-fallback( margin-left, 12px )
    transistion( all, 0.25s )

.social__link--facebook
    display block
    width 100%
    height 100%
    background: url("images/links/facebook.svg") no-repeat
    opacity 0.6
    &:hover
        opacity 1
.social__link--github
    display block
    width 100%
    height 100%
    background: url("images/links/github.svg") no-repeat
    opacity 0.6
    &:hover
        opacity 1
