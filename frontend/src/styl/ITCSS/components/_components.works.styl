// Display all my works
.works
    width 100%

.works__title
    text-align center
    text-transform uppercase
    rem-fallback( margin, 32px 0 )

// Display of each work in works.html
.work
    width 33.33%
    overflow hidden

.work__block
    display block
    position relative
    margin 0
    padding 0
    &:hover .work__caption
        top 0
.work__image
    width 100%
    height 100%
.work__caption
    dislay block
    position absolute
    rem-fallback( top, -1000px )
    right 0
    left 0
    width 100%
    height 100%
    background wf_background-caption-color
    opacity 0.8
    transition( all, 0.25s )
.work__title
    opacity 1
    color white
