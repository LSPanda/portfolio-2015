// Base style for web-page
html
    font-size wf_font-size

body
    line-height calc_line-height( wf_line-height, wf_font-size )
    font-family wf_font-labeur
    background wf_background-color
    color wf_labeur-color
    overflow-y scroll
    min-height 100%
    -webkit-text-size-adjust 100%
    -ms-text-size-adjust 100%
    -moz-osx-font-smoothing grayscale
    -webkit-font-smoothing antialiased

.wrapper__text
    rem-fallback( min-width, 480px )
    rem-fallback( max-width, 540px )
    rem-fallback( padding, 48px 0 32px )
    margin 0 auto
