// Define heading style
h1, .alpha
    rem-fallback( font-size, wf_heading-size-1 )

h2, .beta
    rem-fallback( font-size, wf_heading-size-2 )

h3, .gamma
    rem-fallback( font-size, wf_heading-size-3 )

h4, .delta
    rem-fallback( font-size, wf_heading-size-4 )

h5, .epsilon
    rem-fallback( font-size, wf_heading-size-5 )

h6, .zeta
    rem-fallback( font-size, wf_heading-size-6 )

h1, h2, h3, h4, h5, h6, .alpha, .beta, .gamma, .delta, .epsilon, .zeta
    font-family wf_font-heading
    rem-fallback( margin-bottom, value_line-height( wf_line-height, 1.5 ) )
